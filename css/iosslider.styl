.iosSlider
  position relative
  top 0
  left 0
  overflow hidden
  &.small
    width 500px
    height 400px
  &.medium
    width 800px
    height 570px
  &.large
    width 970px
    height 600px

.iosSlider .slider
  width 100%
  height 100%

.iosSlider .slider .slide
  float left
  &.small
    width 500px
    height 400px
  &.medium
    width 800px
    height 570px
  &.large
    width 970px
    height 600px